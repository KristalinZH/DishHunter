@model MenuFormViewModel
@{
	ViewData["Title"] = "Добави меню";
}
<h2 class="text-center">@ViewData["Title"]</h2>
<hr />
<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post" enctype="multipart/form-data">
			<div class="form-group">
				<label asp-for="MenuType"></label>
				<input asp-for="MenuType" class="form-control" placeholder="Основно меню">
				<span asp-validation-for="MenuType" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FoodType"></label>
				<input asp-for="FoodType" class="form-control" placeholder="Интернационална">
				<span asp-validation-for="FoodType" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description"></label>
				<textarea asp-for="Description" rows="4" class="form-control"
						  placeholder="Основно меню с лимитиран брой артикули..."></textarea>
				<span asp-validation-for="Description" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="BrandId"></label>
				<select asp-for="BrandId" class="form-control">
					@foreach (var brand in Model.Brands)
					{
						<option value="@brand.Id">@brand.BrandName</option>
					}
				</select>
				<span asp-validation-for="BrandId" class="small text-danger"></span>
			</div>
			<div class="align-content-sm-start mt-2">
				<input type="file" name="excelFile" value="Прикачи файл" />
			</div>
			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>