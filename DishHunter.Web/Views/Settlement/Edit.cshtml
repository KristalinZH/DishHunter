@model SettlementFormViewModel

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="Region"></label>
				<input asp-for="Region" class="form-control"
					   placeholder="обл.Бургас">
				<span asp-validation-for="Region" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SettlementName"></label>
				<input asp-for="SettlementName" class="form-control"
					   placeholder="гр.Бургас">
				<span asp-validation-for="SettlementName" class="small text-danger"></span>
			</div>
			<div class="text-center">
				<input class="btn btn-primary mt-3 " type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}