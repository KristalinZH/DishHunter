@model BrandFormViewModel
<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="BrandName"></label>
				<input asp-for="BrandName" class="form-control" placeholder="...Гепи">
				<span asp-validation-for="BrandName" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="LogoUrl"></label>
				<input asp-for="LogoUrl" class="form-control" placeholder="...https:DishHunter/logo/mylog.png">
				<span asp-validation-for="LogoUrl" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="WebsiteUrl"></label>
				<input asp-for="WebsiteUrl" class="form-control" placeholder="...https:DishHunter/mywebsite">
				<span asp-validation-for="WebsiteUrl" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description"></label>
				<textarea asp-for="Description" rows="4" class="form-control"
						  placeholder="...Гепи си манджа за вкъщи"></textarea>
				<span asp-validation-for="Description" class="small text-danger"></span>
			</div>			
			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>